{% extends 'partials/base.html.twig' %}

	{% block content %}
		<div class="content-wrapper blog-content-list grid pure-g">
			<div id="persistent" class="block size-1-4 pure-u-xl-1-4 pure-u-lg-1-4 pure-u-md-1 pure-u-sm-1">
				{% include 'partials/side_contacts.html.twig' %}
			</div>
			{% if page.header.supporting %}
				<div id="main" class="block pure-u-1-2">
					{% block inner_content %}
						{{- page.content -}}
					{% endblock %}
				</div>
				<div id="supporting" class="block size-1-4 pure-u-xl-1-4 pure-u-lg-1-4 pure-u-md-1 pure-u-sm-1">
					{% if page.header.supporting is defined and page.header.supporting is not empty %}
						{% for panel in page.header.supporting %}
							{% include 'partials/panel_' ~ panel ~ '.html.twig' %}
						{% endfor %}
					{% else %} {# default panels, I guess #}
						{% include 'partials/panel_hours.html.twig' %}
					{% endif %}
				</div>
			{% else %}
				<div id="main" class="block size-3-4 pure-u-xl-3-4 pure-u-lg-3-4 pure-u-md-1 pure-u-sm-1">
					{% block wide_content %}
						{{- page.content -}}
						{# include 'partials/calendar.html.twig' with {'calendar_name': 'foobar'} #} {# for testing this template that seems unused and may be a legacy #}
					{% endblock %}
				</div>
			{% endif %}
		</div>
	{% endblock %}
